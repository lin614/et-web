{
  // nuxt的调试的配置 
  //package里，"debug": "node --inspect node_modules/nuxt/bin/nuxt",
  "version": "0.2.0",
  "configurations": [{
    "name": "Debug Hare Dev",
    "type": "node",
    "request": "launch",
    "protocol": "inspector",
    "program": "${workspaceRoot}/node_modules/nuxt/bin/nuxt",
    "stopOnEntry": false,
    "args": ["dev"],
    "cwd": "${workspaceRoot}",
    "sourceMaps": true,
    "env": {
      "NODE_ENV": "development",
      "DEBUG": "nuxt:*,app"
    }
  }]
}
